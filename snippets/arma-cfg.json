{
    "class": {
        "prefix": "class",
        "body": [
            "class ${1:name} {",
            "\t$0",
            "};"
        ],
        "description": "class name {...};"
    },
    "class-inherit": {
        "prefix": "classinherit",
        "body": [
            "class ${1:name} : ${2:base} {",
            "\t$0",
            "};"
        ],
        "description": "class name : base {...};"
    },

    "number": {
        "prefix": "number",
        "body": [
            "${1:name} = ${2:0.0};$0"
        ],
        "description": "name = number;"
    },
    "string": {
        "prefix": "string",
        "body": [
            "${1:name} = \"$2\";$0"
        ],
        "description": "name = \"string\";"
    },
    "array": {
        "prefix": "array",
        "body": [
            "${1:name}[] = {$2};$0"
        ],
        "description": "name[] = {...};"
    },
    "bool": {
        "prefix": "bool",
        "body": [
            "${1:name} = ${2:0|1};$0"
        ],
        "description": "name = 0|1;"
    },
    "color-rgb": {
        "prefix": "colorrgb",
        "body": [
            "${1:name}[] = {${2:R}, ${3:G}, ${4:B}};$0"
        ],
        "description": "Color in RGB format"
    },
    "color-rgba": {
        "prefix": "colorrgba",
        "body": [
            "${1:name}[] = {${2:R}, ${3:G}, ${4:B}, ${5:A}};$0"
        ],
        "description": "Color in RGBA format"
    },
    "image-paa": {
        "prefix": "imagepaa",
        "body": [
            "${1:name} = \"${2:image}.paa\";$0"
        ],
        "description": "Path to image in PAA format"
    },
    "image-jpg": {
        "prefix": "imagejpg",
        "body": [
            "${1:name} = \"${2:image}.jpg\";$0"
        ],
        "description": "Path to image in JPG format"
    },
    "image-png": {
        "prefix": "imagepng",
        "body": [
            "${1:name} = \"${2:image}.png\";$0"
        ],
        "description": "Path to image in PNG format"
    },
    "script-sqf": {
        "prefix": "scriptsqf",
        "body": [
            "${1:name} = \"${2:script}.sqf\";$0"
        ],
        "description": "Path to SQF-script"
    },
    "script-sqs": {
        "prefix": "scriptsqs",
        "body": [
            "${1:name} = \"${2:script}.sqs\";$0"
        ],
        "description": "Path to SQS-script"
    },
    "script-fsm": {
        "prefix": "scriptfsm",
        "body": [
            "${1:name} = \"${2:script}.fsm\";$0"
        ],
        "description": "Path to FSM-script"
    },
    "localized": {
        "prefix": "localized",
        "body": [
            "${1:name} = \"\\$STR_${2:NAME}\";$0"
        ],
        "description": "Localized text"
    },

    "bool-true": {
        "prefix": "true",
        "body": [
            "1$0"
        ],
        "description": "Boolean: true"
    },
    "bool-false": {
        "prefix": "false",
        "body": [
            "0$0"
        ],
        "description": "Boolean: false"
    },

    "scope-private": {
        "prefix": "private",
        "body": [
            "0$0"
        ],
        "description": "Scope: private"
    },
    "scope-protected": {
        "prefix": "protected",
        "body": [
            "1$0"
        ],
        "description": "Scope: protected"
    },
    "scope-public": {
        "prefix": "public",
        "body": [
            "2$0"
        ],
        "description": "Scope: public"
    },

    "access-readwrite": {
        "prefix": "readwrite",
        "body": [
            "0$0"
        ],
        "description": "Access: read&write"
    },
    "access-readcreate": {
        "prefix": "readcreate",
        "body": [
            "1$0"
        ],
        "description": "Access: read&create"
    },
    "access-readonly": {
        "prefix": "readonly",
        "body": [
            "2$0"
        ],
        "description": "Access: read-only"
    },
    "access-readonlyverified": {
        "prefix": "readonlyverified",
        "body": [
            "3$0"
        ],
        "description": "Access: read-only with CRC test"
    },

    "include": {
        "prefix": "include",
        "body": [
            "#include \"${1:FILE}\"$0"
        ],
        "description": "#include \"FILE\""
    },
    "define": {
        "prefix": "define",
        "body": [
            "#define ${1:MACRO} $0"
        ],
        "description": "#define A"
    },
    "define-params": {
        "prefix": "defineparams",
        "body": [
            "#define ${1:MACRO}($2) $0"
        ],
        "description": "#define A(B)"
    },
    "undefine": {
        "prefix": "undefine",
        "body": [
            "#undef ${1:MACRO}$0"
        ],
        "description": "#undef A"
    },
    "if-defined": {
        "prefix": "ifdef",
        "body": [
            "#ifdef ${1:MACRO}",
            "$0",
            "#endif"
        ],
        "description": "#ifdef ... #endif"
    },
    "if-defined-else": {
        "prefix": "ifdefelse",
        "body": [
            "#ifdef ${1:MACRO}",
            "$0",
            "#else",
            "",
            "#endif"
        ],
        "description": "#ifdef ... #else ... #endif"
    },
    "if-undefined": {
        "prefix": "ifndef",
        "body": [
            "#ifndef ${1:MACRO}",
            "$0",
            "#endif"
        ],
        "description": "#ifndef ... #endif"
    },
    "if-undefined-else": {
        "prefix": "ifndefelse",
        "body": [
            "#ifndef ${1:MACRO}",
            "$0",
            "#else",
            "",
            "#endif"
        ],
        "description": "#ifndef ... #else ... #endif"
    }
}
